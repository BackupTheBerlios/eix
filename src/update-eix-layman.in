source update-eix-functions.sh.in

declare -a LAYMAN_MAKE LAYMAN_OVERLAYS

Usage () {
	local I
	echo "Usage: ${0##*/} [options] command
Add or remove local layman overlays to eix database (@PACKAGE_STRING@)
The following commands are provided:

add:	Add the local layman overlays to the eix database
remove:	Remove the local layman overlays from the eix database.

Options:
	-a OVERLAY  Add overlay to the list of layman overlays.
	-A PATH     Add PATH to the sourced make.conf's used to determine
	            the layman overlays. Current value:"
	for I in "${LAYMAN_MAKE[@]}"
	do
		echo \
"	            	${I}"
	done
	echo \
"	-C          Clear the above list.
	-v          Verbose (default)
	-q          Quiet"
	exit "${1}"
}

ClearLayman () {
	LAYMAN_MAKE=()
}

AddLaymanMake () {
	local I
	for I; do
		LAYMAN_MAKE[${#LAYMAN_MAKE[@]}]="${I}"
	done
}

AddLaymanOverlays () {
	local I
	for I; do
		LAYMAN_OVERLAYS[${#LAYMAN_OVERLAYS[@]}]="${I}"
	done
}

GetPortdir
ClearLayman
AddLaymanMake "${PORTDIR}/local/layman/make.conf"
LAYMAN_OVERLAYS=()

while getopts 'vqa:A:C?hH' OPTION; do
	case "${OPTION}" in
		v) VERBOSE=1;;
		q) VERBOSE='';;
		a) AddLaymanOverlays "${OPTARG}";;
		A) AddLaymanMake "${OPTARG}";;
		C) ClearLayman;;
		*) Usage 0;;
	esac
done
shift $((OPTIND-1))

GetOverlays () {
	local I
	for I in "${LAYMAN_MAKE[@]}"
	do
		[[ "${I}" ]] || continue
		[[ -r "${I}" ]] || die "cannot read ${I}"
		AddLaymanOverlays \
			$(PORTDIR_OVERLAY=''; source "${I}"; \
				echo "${PORTDIR_OVERLAY}")
	done
}

Init () {
	ClearUpdateEixArgs
	GetOverlays
	AddLocalMethods
}

Add () {
	Init
	AddOverlays "${LAYMAN_OVERLAYS[@]}"
	CallUpdateEix
}

Remove () {
	Init
	AddExcludes "${LAYMAN_OVERLAYS[@]}"
	CallUpdateEix
}

MAIN_COMMAND="${1}"
shift

case "${MAIN_COMMAND}" in
	add*)               Add "${@}";;
	rem*|del*|rm*|sub*) Remove "${@}";;
	*)                  Usage 1;;
esac

exit 0
